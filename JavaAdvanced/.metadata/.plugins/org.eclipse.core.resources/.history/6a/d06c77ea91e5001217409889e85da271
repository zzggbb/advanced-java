
public class TicTacToePlayer {
	
	TicTacToeGame game;
	
	public TicTacToePlayer(TicTacToeGame g) {
		
		game = g;
	}
	
	public void printAllMoves() {
		for (int x = 0; x < 3; x++) {
			for (int y = 0; y < 3; y++) {
				if (game.canPlacePieceAt(x, y)) {
					System.out.println("Position " + x + ", " + y + " is open");
				}
			}
		}
	}
}
